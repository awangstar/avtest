#about  h1, #about h2{
	font-family:'Futura', sans-serif;
	text-transform: capitalize;
	font-size: 2.8em;
}

#about h3{
	font-family: 'Adobe Caslon Pro', serif;
	font-style: italic;
	font-size: 2.2em;
}

#about p{
	font-family: 'Avenir Next', sans-serif;
	font-size: 1.3em;
	line-height: 1.7em;
}

#who {
	font-size: 1.5em !important;
	line-height: 2em !important;
}

#about .section{
	margin: 0 0 35px;
	/*clear: both;*/
}

#about img{
	margin: 0 0 25px;
}

#video{
	height: 315px;
}

/* larger than tablet */

@media screen and (min-width: 739px){
	#video{
		width: 100%;
		height: 315px;
	}

	.padding{
		padding: 35px;
	}

	#introtext{
		float: left;
	}

	#introimg{
		float: right;
	}

}

/* tablet  */

@media screen and (min-width: 500px) and (max-width: 739px) {
	#video{
		width: 470px;
		height: 264px;
	}

}

/*  mobile  */
@media screen and (max-width: 500px) {
	#video{
		width: 293.75px;
		height: 165px;
	}

	#about h1, #about h2, #about h3 {
		text-align: left;
	}

}

