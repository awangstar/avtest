}

/* larger than tablet */

@media screen and (min-width: 739px){

	#introtext{
		position: absolute;
		top: 55px;
		left: 25px
	}

	#video{
		width: 100%;
		height: 315px;
	}
}


@media screen and (min-width: 500px) and (max-width: 739px) {
	#video{
		width: 470px;
		height: 264px;
	}
}


@media screen and (max-width: 500px) {
	#video{
		width: 293.75px;
		height: 165px;
	}
}

